<h1>Password Reset</h1>
<div class="span10">
<%= form_tag password_resets_path, :method => :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="actions"><%= submit_tag "Reset Password" ,class: "btn btn-primary btn-large" %></div>
<% end %>
</div>
