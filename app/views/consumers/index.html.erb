<h1>Users</h1>
<div class="categories">
  <div class="span8">
   <ul>
    <% @consumers.each do |consumer| %>
  
      <li>Name :<%= consumer.name %><br/>
      Email :<%= consumer.email %><br/>
      <%= link_to 'Show', consumer %>
      <%= link_to 'Edit', edit_consumer_path(consumer) %>
      <%= link_to 'Destroy', consumer, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <% end %>
   </ul>
  </div>
</div>
 <aside style="margin-left:10%">
   <%= link_to 'Add User', new_consumer_path ,class:"btn btn-primary btn-large"%>
 </aside>


