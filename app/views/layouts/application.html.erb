<!DOCTYPE html>
<html>

<head>
  <title>Linkites llc</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>    
</head>
<body>
 <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
   <div class="container">
    <%= link_to 'LINKITES LLC' , '#',id:'logo' %>
    <nav>
     <ul class="nav pull-right">
	  <% if signed_in? %>
             <li><%= link_to "Store", profiles_path %></li>
             <li><%= link_to "Items", products_path %></li>
             <li><%= link_to "Sub Categories", sub_categories_path %></li>
             <li><%= link_to "Orders", orders_path %></li>
               <% if sadmin_consumer? %> 
                 <li><%= link_to "Categories", categories_path %></li>
                 <li><%= link_to "Ads", ad_posts_path %></li>
                 <li><%= link_to "Users", consumers_path %></li>
                 <% end %>
	     <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b></a>
                 <ul class="dropdown-menu">
                 <li class="divider"></li>
                 <li><%= link_to "Sign out", sign_out_path, method: "delete" %></li>
                 </li>
	   </ul>	
	 <% else %>
          <li> <%= link_to 'Sign In'  , sign_in_path %></li>
         <% end %>      
      </ul>
    </nav>
   </div>
  </div>
 </header>
   <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
 	<%= yield %>
   </div>
</body>
</html>
